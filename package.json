{
  "name": "twitch-bot",
  "version": "0.0.0",
  "description": "A sample open source Twitch bot using NodeCG and the Twurple Twitch libraries",
  "homepage": "https://github.com/OdatNurd/devember-2021",
  "author": {
    "name": "OdatNurd",
    "email": "odatnurd@gmail.com",
    "url": "https://odatnurd.net"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "extension"
  ],
  "keywords": [
    "",
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "dashboardPanels": [
      {
        "name": "auth-bot",
        "width": 4,
        "title": "Bot Account",
        "file": "auth_bot.html",
        "headerColor": "#525F78",
        "workspace": "Setup"
      },
      {
        "name": "auth-channel",
        "width": 4,
        "title": "Twitch Channel",
        "file": "auth_channel.html",
        "headerColor": "#525F78",
        "workspace": "Setup"
      },
      {
        "name": "bot-chat",
        "width": 6,
        "title": "Chat Actions",
        "file": "bot_chat.html",
        "headerColor": "#525F78",
        "workspace": "Bot"
      },
      {
        "name": "bot-say",
        "width": 6,
        "title": "Text To Speech",
        "file": "bot_say.html",
        "headerColor": "#525F78",
        "workspace": "Bot"
      },
      {
        "name": "bot-sounds",
        "width": 3,
        "title": "Sound Board",
        "file": "bot_soundcues.html",
        "headerColor": "#525F78",
        "workspace": "Bot"
      },
      {
        "name": "reload-log",
        "width": 6,
        "title": "Dynamic Command Loader",
        "file": "reload_log.html",
        "headerColor": "#525F78",
        "workspace": "Logs"
      },
      {
        "name": "reload-evt",
        "width": 6,
        "title": "Dynamic Event Loader",
        "file": "reload_evt.html",
        "headerColor": "#525F78",
        "workspace": "Logs"
      },
      {
        "name": "reload-chan",
        "width": 6,
        "title": "Dynamic Channel Point Redeem Loader",
        "file": "reload_chan.html",
        "headerColor": "#525F78",
        "workspace": "Logs"
      },
      {
        "name": "editor",
        "title": "File Editor",
        "fullbleed": true,
        "file": "file_editor.html",
        "headerColor": "#525F78"
      }
    ],
    "graphics": [
      {
        "file": "shoutout.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "tts.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "drop_game.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "soundboard.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "soundCues": [
      {
        "name": "success",
        "defaultFile": "soundcues/01_success.mp3",
        "assignable": false
      },
      {
        "name": "you_fail",
        "defaultFile": "soundcues/02_you_fail.mp3",
        "assignable": false
      },
      {
        "name": "winner_bell",
        "defaultFile": "soundcues/03_winner_bell.mp3",
        "assignable": false
      },
      {
        "name": "wrong_buzzer",
        "defaultFile": "soundcues/04_wrong_buzzer.mp3",
        "assignable": false
      },
      {
        "name": "applause",
        "defaultFile": "soundcues/05_applause.mp3",
        "assignable": false
      },
      {
        "name": "congratulations",
        "defaultFile": "soundcues/06_congratulations.mp3",
        "assignable": false
      },
      {
        "name": "drumroll",
        "defaultFile": "soundcues/07_drumroll.mp3",
        "assignable": false
      },
      {
        "name": "rimshot",
        "defaultFile": "soundcues/08_rimshot.mp3",
        "assignable": false
      },
      {
        "name": "airhorn",
        "defaultFile": "soundcues/09_airhorn.mp3",
        "assignable": false
      },
      {
        "name": "price_is_wrong",
        "defaultFile": "soundcues/10_price_is_wrong.mp3",
        "assignable": false
      }
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@google-cloud/text-to-speech": "^3.4.0",
    "@twurple/api": "^5.0.13",
    "@twurple/auth": "^5.0.13",
    "@twurple/chat": "^5.0.13",
    "@twurple/eventsub": "^5.0.13",
    "axios": "^0.24.0",
    "body-parser": "^1.19.1",
    "convict": "^6.2.1",
    "dotenv": "^10.0.0",
    "import-fresh": "^3.3.0",
    "json5": "^2.2.0",
    "micromatch": "^4.0.4",
    "sanitize-filename": "^1.6.3",
    "sqlite3": "^5.0.2",
    "template-file": "^6.0.0",
    "trilogy": "^2.0.5",
    "uuid": "^8.3.2"
  }
}
